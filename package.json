{
  "name": "mco-server",
  "version": "3.0.0-beta1",
  "description": "a server",
  "main": "index.js",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "audit": "yarn npm audit",
    "check:license": "yarn licenses audit --summary --config=licenses.config.js",
    "start": "ts-node bin/app.ts",
    "check:type": "tsc --noEmit",
    "check:type:watch": "tsc --noEmit --watch",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "lint": "eslint packages/**/*.ts && prettier --write packages",
    "lint-test": "yarn run lint && yarn run test:only",
    "test:only": "jest",
    "precommit": "yarn run lint-test"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "dependencies": {
    "@drazisil/mco-logger": "4.1.10",
    "@mco-server/admin": "workspace:^",
    "@mco-server/auth": "workspace:^",
    "@mco-server/core": "workspace:^",
    "@mco-server/patch": "workspace:^",
    "@mco-server/proxy": "workspace:^",
    "@mco-server/router": "workspace:^",
    "@mco-server/shard": "workspace:^",
    "pm2": "5.1.1",
    "sqlite3": "4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.15.4",
    "@babel/core": "7.15.5",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-typescript": "7.15.0",
    "@tsconfig/node14": "1.0.1",
    "@types/node": "16.7.10",
    "@types/sqlite3": "3.1.7",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4",
    "@typescript-eslint/parser": "4",
    "eslint": "7",
    "eslint-config-prettier": "8",
    "jest": "27.2.0",
    "prettier": "2",
    "prettier-eslint": "13",
    "sinon": "11.1.2",
    "source-map-support": "0.5.20",
    "supertest": "6.1.6",
    "ts-jest": "27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "4.4.3"
  },
  "volta": {
    "node": "16.9.1",
    "yarn": "2.4.3"
  },
  "packageManager": "yarn@3.1.0-rc.5"
}
