{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "rootDir": ".",
      "outDir": "./dist",
      "baseUrl": ".",
      "sourceMap": true,
      "resolveJsonModule": true,
      "composite": true,
      "allowJs": false,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@mco-server/types": ["../types/src/index.ts"],
        "@mco-server/router": ["../router/src/index.ts"],
        "@mco-server/shard":["../shard/src/index.ts"],
        "@mco-server/patch":["../patch/src/index.ts"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
      {
        "path": "../config"
      },
      {
        "path": "../types"
      },
      {
        "path": "../router"
      },
      {
        "path": "../shard"
      },
      {
        "path": "../patch"
      }
    ]
  }
  