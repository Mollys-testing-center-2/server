{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "rootDir": ".",
      "outDir": "./dist",
      "baseUrl": ".",
      "sourceMap": true,
      "resolveJsonModule": true,
      "composite": true,
      "allowJs": false,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@mco-server/types": ["../types/src/index.ts"],
        "@mco-server/config": ["../config/src/index.ts"],
        "@mco-server/core": ["../core/src/index.ts"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  