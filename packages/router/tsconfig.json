{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@mco-server/config": ["../config/src/index.ts"],
      "@mco-server/types": ["../types/src/index.ts"]
    }
  },
  "files": ["src/index.ts", "./src/client.ts"],
  // "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../config"
    },
    {
      "path": "../types"
    }
  ]
}
