{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true,
        "allowJs": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}